package version2;

import java.io.File;


public class DirectoryPrintVisitor implements DirectoryVisitor{
	
	int d = 0;
	@Override
	public void enterDirectory(File dir) {
		File[] files = dir.listFiles();
		for (int i = 0; i < d; i++) {
			 System.out.print("  ");
		}
	
			if (dir.isDirectory()) {
				System.out.println("*Ordner :* " + dir.getAbsolutePath() + "    \n *Name des Ordners : *" 
						+ dir.getName() + "    \n *Göße des Ordners in KB :*" + dir.length()/1024+"KB" );
			} 

	}
	

	@Override
	public void leaveDirectory(File dir) {
		File[] files = dir.listFiles();
		for (int i = d; i > 0; i--) {
			 System.out.print("  ");
		}
		for (File f : files) {
			if (f.isDirectory()) {
				System.out.println("*Ordner :* " + f.getAbsolutePath() + "    \n *Name des Ordners : *" 
						+ f.getName() + "    \n *Göße des Ordners in KB :*" + f.length()/1024+"KB" );
			} else {
				System.out.println("*Datei *: " + f.getAbsolutePath() + "    \n *Name der Datei : *" 
						+ f.getName() 
						+ " \n *Göße der Datei in KB :* " + f.length()/1024+"KB"  ); 

			}
		}
	}

	@Override
	public void visitFile(File file) {
		File dir = new File("/home/aiham/Pictures");
		
		
		
	}


