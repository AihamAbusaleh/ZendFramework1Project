package version2;

import java.io.File;

public class FileBrowser {
	
	public void traverse(File dir, DirectoryVisitor visitor) {
		  File[] files = dir.listFiles();
		  for (File f : files) {
			  if(f.isDirectory()) {
				  traverse(f, new DirectoryPrintVisitor());
					
					@Override
					public void visitFile(File file) {
						// TODO Auto-generated method stub
						
					}
					
					@Override
					public void leaveDirectory(File dir) {
						// TODO Auto-generated method stub
						
					}
					
					@Override
					public void enterDirectory(File dir) {
						// TODO Auto-generated method stub
						
					}
				});
				  visitor.enterDirectory(f);
				  visitor.leaveDirectory(f); 
			  } else {
				  visitor.visitFile(f);
			  }
				  
			
		}
	}

}
