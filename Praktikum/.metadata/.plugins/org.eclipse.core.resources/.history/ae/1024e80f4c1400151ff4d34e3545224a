package blatt9;

import java.awt.Color;

public class ArrayDraw {
	// private static double x;
	// private static double y;
	static long startTime;
	static int width;

	private ArrayDraw() {
	}

	public static void init(final int b, final int h) {
		StdDraw.setCanvasSize(b, h);
		StdDraw.clear(Color.WHITE);
		// StdDraw.filledRectangle(0.5, 0.5, 1, 1);
		// StdDraw.setPenColor(Color.WHITE);
		startTime = System.nanoTime();
		width=b;

	}

	private static void draweinzeln(int[] a, int i, Color c) {
		StdDraw.clear(Color.WHITE);
		StdDraw.filledSquare(width, width, width);
		StdDraw.setPenColor(c);
		
		for (int j = 0; j < a.length; j++) {
			StdDraw.filledRectangle(i, a[i], 0.5, a[i]); 
//			StdDraw.filledRectangle((i + 0.5) * x, a[i] * y * 0.5, x * 0.5, a[i]
//			* y * 0.5);
		}

		StdDraw.show(10);
	}

	public static void draw(final int[] a, Color c) {
		StdDraw.setPenColor(Color.WHITE);
		for (int i = 0; i < a.length; i++) {
			StdDraw.filledRectangle(0.5, 0.5, 0.5, 0.5);
			draweinzeln(a, i, c);

		}
		StdDraw.show(10);
	}

	public static void draw(final int[] a, int i, Color c) {
		draweinzeln(a, i, c);
		StdDraw.show(10);

	}

	public static void showTime() {
		System.out.println("Time since start : " + System.nanoTime());

	}

}
