package blatt9;

import java.awt.Color;

public class Sort {
	
	private Sort() {}

    public static void insertionSortAnimated(final int[] a) {

        for (int i = 1; i < a.length; i++) {
            ArrayDraw.draw(a, Color.BLUE);
            ArrayDraw.draw(a, i, Color.RED);
            int v = a[i];

            int j = i - 1;
            while (j >= 0 && a[j] > v) {
                a[j + 1] = a[j];
                j--;
            }
            a[j + 1] = v;
            ArrayDraw.draw(a, j + 1, Color.RED);

        }
        ArrayDraw.draw(a, Color.BLUE);
        ArrayDraw.showTime();
    }

}
